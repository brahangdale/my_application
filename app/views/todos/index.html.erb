<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
<div class="row">
	<div class="col-md-12">
		<%=  form_for @todo, url: todos_path do |f| %>
			<div class="well">
				<h5><label class="title">My To Do Create</label></h5>
				<div class="form-group">
					<%= f.text_field :title, class: "form-control" %>
				</div>
					<%= f.submit  %>
			</div>
		<% end %>		
	</div>	
</div>

<div class="row">
	<div class="col-md-12">
			<% @todos.each do |todo| %>
				<div class="well content">
					<%= todo.title %>
					<% if todo.complete? %>	
					<% else %>
					<span class="pull-right  link1"><%= link_to "complete",  complete_todo_path(todo),  method: :put %>
						<% end %>
					</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					<span class="pull-right"><%= link_to "del",  todo_path(todo) , method: :delete %></span>
				</div> 
			<% end %>
	</div>
</div>